{
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:sangheonhan/pman-php-manual.git"
        }
    ],
    "require": {
        "phpunit/phpunit": "~9",
        "squizlabs/php_codesniffer": "~3",
        "friendsofphp/php-cs-fixer": "~2",
        "phpmd/phpmd": "~2",
        "phploc/phploc": "~7",
        "sangheonhan/pman-php-manual": "~1"
    },
    "scripts": {
        "post-update-cmd": [
            "phpcs --config-set default_standard PSR2",
            "phpcs --config-set colors 1"
        ],
        "post-install-cmd": [
            "phpcs --config-set default_standard PSR2",
            "phpcs --config-set colors 1"
        ]
    }
}
